<div class="form-group">
    <label for="firstname">First Name</label>
    <input required value="<%= appointment.firstname %>" type="text" name="firstname" id="firstname" class="form-control">
</div>
<div class="form-group">
    <label for="lastname">Last Name</label>
    <input required value="<%= appointment.lastname %>" type="text" name="lastname" id="lastname" class="form-control">
</div>
<div class="form-group">
    <label for="phonenumber">Phone Number</label>
    <input required value="<%= appointment.phonenumber %>" type="text" name="phonenumber" id="phonenumber" class="form-control">
</div>
<div class="form-group">
    <label for="course">Course of Interest</label>
    <input required value="<%= appointment.course %>" type="text" name="course" id="course" class="form-control">
</div>
<div class="form-group">
    <label for=avaliability>Avaliability</label>
    <textarea required name=avaliability id=avaliability class="form-control"><%= appointment.avaliability %></textarea>
</div>



<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>